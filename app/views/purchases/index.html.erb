<p id="notice"><%= notice %></p>

<h1>Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Name product</th>
      <th>Count</th>
      <th>Price</th>
      <th>Stage buy</th>
      <th>Stage in corp</th>
      <th>Plus info</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.name_product %></td>
        <td><%= purchase.count %></td>
        <td><%= purchase._price %></td>
        <td><%= purchase.stage_buy %></td>
        <td><%= purchase.stage_in_corp %></td>
        <td><%= purchase.plus_info %></td>
        <td><%= purchase.customer_id %></td>
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

