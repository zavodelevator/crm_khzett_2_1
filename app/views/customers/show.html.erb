</div>

<%= form_with model: [@customer, @purchase] do |f|%>
 
  <div>
    <%= f.text_area :name_product, placeholder: "product name"%>
  </div>

  <div>
    <%= f.text_area :count_price_params, placeholder: "params price"%>
  </div>

  <div>
    <%= f.text_area :stage_buy, placeholder: "stage buy"%>
  </div>

  <div>
    <%= f.text_area :stage_in_corp, placeholder: "stage in corp"%>
  </div>  

  <div>
    <%= f.text_area :plus_info, placeholder: "plus info"%>
  </div>  


<% end %>