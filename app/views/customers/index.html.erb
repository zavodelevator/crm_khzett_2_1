<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table class="table table-striped table-secondary table-bordered">
  <thead>
    <tr>
      <th>Customer name</th>
      <th>Contact person</th>
      <th>Adress custommer</th>
      <th>Edrpou</th>
      <th>Email</th>
      <th>Website</th>
      <th>Note</th>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <% if customer.user == current_user%>
        <tr>
          <td><%= customer.customer_name %></td>
          <td><%= customer.contact_person %></td>
          <td><%= customer.adress_custommer %></td>
          <td><%= customer.edrpou %></td>
          <td><%= customer.email %></td>
          <td><%= customer.website %></td>
          <td><%= customer.note %></td>
          <td><%= customer.user_id %></td>
          <!--  <td><%= customer.dev_date %></td>  -->
          <td><%= link_to 'Show', customer %></td>
          <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
          <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Customer', new_customer_path, class: "btn btn-light"%>
